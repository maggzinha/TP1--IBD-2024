CREATE 
    ALGORITHM = UNDEFINED 
    DEFINER = `root`@`localhost` 
    SQL SECURITY DEFINER
VIEW `connectme`.`informacoes_perfil_usuario` AS
    SELECT 
        `pu`.`nome` AS `nome`,
        (SELECT 
                COUNT(0)
            FROM
                `connectme`.`conecta`
            WHERE
                (`connectme`.`conecta`.`email_usuario` = `u`.`email`)) AS `quantidade_amigos`
    FROM
        (`connectme`.`perfil_usuario` `pu`
        JOIN `connectme`.`usuario` `u` ON ((`u`.`id_perfil_usuario` = `pu`.`id`)))
